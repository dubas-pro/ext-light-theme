{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "header"
    ],
    "rules": {
        "prettier/prettier": [
            "error"
        ],
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "prev": "*",
                "next": [
                    "return"
                ]
            }
        ],
        "padded-blocks": [
            "error",
            {
                "classes": "always"
            }
        ],
        "header/header": [
            2,
            "block",
            [
                "********************************************************************************************",
                "This file is part of the Dubas Light Theme package.",
                "",
                "(c) DUBAS - Emil Dubielecki & Arkadiy Asuratov S.C.",
                "",
                "For the full copyright and license information, please view the LICENSE",
                "file that was distributed with this source code.",
                "Under the terms of the license, You shall not sublicense, resell, rent, lease, distribute,",
                "or otherwise transfer rights or usage to the software.",
                "********************************************************************************************"
            ],
            2
        ]
    }
}
